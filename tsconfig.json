{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "ES2022",
    "target": "ES2022",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "src",
    "moduleSuffixes": [".component", ""],
    "paths": {
      "core/*": ["core/*"],
      "modules/*": ["modules/*"],
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "styles/*": ["styles/*"],
      "images/*": ["images/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
